<div class="container">
    <row class="mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
        <a class="btn btn-success mb-3" href="/add">Agregar Personaa</a>
        {{#if personas}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {{#each personas}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/persona/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/persona/{{id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="5">Registro de personas</td>
                    </tr>
                </tfoot>
            </table>
        
        

        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>presiona este boton para que puedeas registrar a una persona en la aplicacion</p>
                    <a href="#" class="btn btn-primary">ir a crear</a>
                </div>
            </div>
        {{/if}}
    </row>
</div>
